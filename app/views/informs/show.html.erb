<% provide(:title, '新闻展示')  %>

<% if !notice.nil? %>
  <div class="alert alert-success alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <%= notice %> 
  </div>
<% end%>
 <!-- /.row -->
 <div class="panel panel-default">
   <div class="panel-heading">新闻展示</div>
      <div class="panel-body">
        <div class="table-responsive">
                    <div class="check_product">
                        <strong>标题</strong>
                        <p><%= @inform.title %></p>
                    </div>
                <!-- /.col-lg-4 -->
                    <div class="check_product">
                        <strong>作者</strong>
                        <p> <%= @inform.author %></p>
                    </div>
                    <div class="check_product">
                        <strong>摘要</strong>
                        <p> <%= @inform.brief %></p>
                    </div>
                <!-- /.col-lg-4 -->
                    <div class="check_product" id="log">
                        <strong>内容</strong>
                    </div>
             <%= link_to '编辑', edit_inform_path(@inform) ,class:"btn btn-outline btn-primary"%> 
<%= link_to '返回', informs_path ,class:"btn btn-outline btn-primary"%>
        </div>
     </div>
</div>
            <!-- /.row -->
  <script type="text/javascript">
                  a = $('<iframe/>', {id: 'foo', })
                  a.appendTo('#log');
                  a.css('width', '100%');
                  a.css('height', '100%');
                  a.css('border','0 none');


                    html = unescape("<%= @inform.context %>");
                    $('#foo').contents().find('body').append(html);
              </script>


