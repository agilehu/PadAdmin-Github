<h1>Listing companies</h1>

<table>
  <thead>
    <tr>
      <th>Company name</th>
      <th>Company address</th>
      <th>Company tel</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @companies.company_name %></td>
        <td><%= @companies.company_address %></td>
        <td><%= @companies.company_tel %></td>
        <td><%= link_to 'Show', @companies %></td>
        <td><%= link_to 'Edit', edit_company_path(@companies) %></td>
        <td><%= link_to 'Destroy', @companies, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  </tbody>
</table>

