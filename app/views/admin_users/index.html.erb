<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        管理员管理
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
       <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th class="textstyle">用户名</th>
              <th class="textstyle">邮箱</th>
              <th class="textstyle">操作</th>
            </tr>
          </thead>

          <tbody>
            <% @admins.each do |admin_user| %>
            <tr>
              <td class="textstyle"><%= admin_user.username %></td>
              <td class="textstyle"><%= admin_user.email%></td>
              <td class="textstyle"><%= link_to '查看', admin_path(admin_user) %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <%= link_to '编辑', edit_admin_path(admin_user) %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <%= link_to '删除', admin_path(admin_user), method: :delete, data: { confirm: '您确定要删除?' } %></td>
              </tr>
              <% end %>
            </tbody>
          </table>

        </table>

      </div>
      <!-- /.table-responsive -->
    </div>

    <!-- /.panel-body -->
  </div>
  <!-- /.panel -->

</div>

</div>

<%= link_to '新建管理员', new_admin_path, class:"btn btn-outline btn-primary", role:"button"%>
