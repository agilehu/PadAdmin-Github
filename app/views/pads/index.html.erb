<br>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        平板管理
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
       <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th class="textstyle">MAC地址</th>
              <th class="textstyle">用户</th>
              <th class="textstyle">操作</th>
            </tr>
          </thead>

          <tbody>
            <% @pads.each do |pad| %>
            <tr>
              <td class="textstyle"><%= pad.Mac_address %></td>
              <td class="textstyle"><%= pad.pad_user.name%></td>
              <td class="textstyle"><%= link_to '查看', pad %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <%= link_to '编辑', edit_pad_path(pad) %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <%= link_to '删除', pad, method: :delete, data: { confirm: '您确定要删除?' } %></td>
              </tr>
              <% end %>
            </tbody>
          </table>

        </table>

      </div>
      <!-- /.table-responsive -->
    </div>

    <!-- /.panel-body -->
  </div>
  <!-- /.panel -->

</div>

</div>

<%= link_to '新建平板', new_pad_path, class:"btn btn-outline btn-primary", role:"button"%>
