<% provide(:title, '插件IP管理')  %>

<% if !notice.nil? %>
  <div class="alert alert-success alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <%= notice %> 
  </div>
<% end%>

    <div class="panel panel-default">
      <div class="panel-heading">
        插件IP管理
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
       <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th class="textstyle">用户</th>
              <th class="textstyle">IP地址</th>
              <th class="textstyle">操作</th>
            </tr>
          </thead>

          <tbody>
             <% @ips.each do |ip| %>
            <tr>
              <td class="textstyle"><%= ip.user_name %></td>
              <td class="textstyle"><%= ip.IP_address %></td>
              <td class="textstyle"><%= link_to '查看',ip %>
                <%= link_to '编辑',edit_ip_path(ip) %>
                <%= link_to '删除', ip, method: :delete, data: { confirm: '您确定要删除?' } %></td>
              </tr>
              <% end %>
            </tbody>
          </table>

<%= link_to '新建IP', new_ip_path, class:"btn btn-outline btn-primary", role:"button"%>

      </div>
      <!-- /.table-responsive -->
    </div>

    <!-- /.panel-body -->
  </div>
  <!-- /.panel -->
