<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        公司管理
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
       <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th class="textstyle">公司名称</th>
              <th class="textstyle">公司地址</th>
              <th class="textstyle">公司电话</th>
              <th class="textstyle">操作</th>
            </tr>
          </thead>

          <tbody>
            <% @admin_companies.each do |company| %>
            <tr>
              <td class="textstyle"><%= company.company_name %></td>
              <td class="textstyle"><%= company.company_address%></td>
              <td class="textstyle"><%= company.company_tel%></td>
              <td class="textstyle"><%= link_to '查看', admin_company_path(company) %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <%= link_to '编辑', edit_admin_company_path(company) %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <%= link_to '删除', admin_company_path(company), method: :delete, data: { confirm: '您确定要删除?' } %></td>
              </tr>
              <% end %>
            </tbody>
          </table>

          <%= link_to '新建公司', new_admin_company_path, class:"btn btn-outline btn-primary", role:"button"%>

        </div>
        <!-- /.table-responsive -->
      </div>

      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->

  </div>

</div>
