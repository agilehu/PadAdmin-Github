  <div class="field">

  <% if@admin_company.errors.any?%>
            <label class="string required control-label error">公司电话:</label>
            <% else %>
            <label>公司电话</label>
            <% end %>
    <%= f.text_field :company_tel, class:(@admin_company.errors.any?) ? "form-control error" : "form-control", value: (@admin_company.company_tel.nil?)? "" : @admin_company.company_tel%>
  </div>
<div class="field">

