<%= form_for(@admin_company, url: admin_companies_path, method: "post") do |f| %>
  <% if @admin_company.errors.any? %>
    <div class="alert alert-block alert-error">
        <a class="close" data-dismiss="alert" href="#">×</a>
        <p><strong>有 <%= @admin_company.errors.count %> 处问题导致无法提交:</strong></p>
        <ul>
        <% @admin_company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
        </ul>
</div>
  <% end %>
  <% if @admin.errors.any? %>
    <div class="alert alert-block alert-error">
        <a class="close" data-dismiss="alert" href="#">×</a>
        <p><strong>有 <%= @admin.errors.count %> 处问题导致无法提交:</strong></p>
        <ul>
        <% @admin.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
        </ul>
</div>
  <% end %>
   <div class="field">

   <% if@admin_company.errors.any?%>
            <label class="string required control-label error">公司名字:</label>
            <% else %>
            <label>公司名字</label>
            <% end %>
