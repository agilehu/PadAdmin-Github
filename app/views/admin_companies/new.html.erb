  <div class="field">

  <% if@admin_company.errors.any?%>
            <label class="string required control-label error">邮箱</label>
            <% else %>
            <label>邮箱</label>
            <% end %>
    <%= f.text_field :email, class:(@admin_company.errors.any?) ? "form-control error" : "form-control", value: (@admin_company.email.nil?)? "" : @admin_company.email%>
  </div>
  <div class="field">

  <% if@admin_company.errors.any?%>
            <label class="string required control-label error">密码</label>
            <% else %>
            <label>密码</label>
            <% end %>
